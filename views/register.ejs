<%- include('partials/header') %>


<div class="jumbotron centered">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <i class="fas fa-user-graduate fa-9x"></i>
    <h1 class="display-3">IDEMIA Skill Management</h1>
    <p class="lead">Don't keep your secrets, share them anonymously!</p>
    <hr>


    <div class="row justify-content-md-center">
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
    
              <!-- Makes POST request to /login route -->
              <form action="/register" method="POST">
                <div class="form-group">
                  <label for="lblregerror" ><%=registrationerror%></label>
                 </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" name="username">
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-dark">Register</button>
                <a class="btn btn-dark" href="/home" role="button">Home</a>

              </form>
    
            </div>
          </div>
        </div>


  </div>
</div>

<%- include('partials/footer') %>

